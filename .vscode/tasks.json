{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "t.Tailwind Watcher",
			"type": "shell",
			"command": ["npx @tailwindcss/cli -i ./input.css -o ./output.css --watch"],
			"presentation": {
				"reveal": "never",
				"panel": "new"
			},
			"runOptions": {
				"runOn": "folderOpen"
			}
		}
	]
}
